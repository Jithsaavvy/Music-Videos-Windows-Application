<Application
    x:Class="Music.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Music"
    RequestedTheme="Light">

    <Application.Resources>


        <MediaElement VerticalAlignment="Top" x:Key="GlobalMedia" Width="1000" Height="400" AreTransportControlsEnabled="True"  AutoPlay="True" AudioCategory="Communications" />

        <TextBlock x:Name="resultetxtblock" x:Key="myresult" Margin="10,0,0,0" TextWrapping="NoWrap" Style="{ThemeResource SubtitleTextBlockStyle}" Foreground="Black" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Application.Resources>

</Application>
